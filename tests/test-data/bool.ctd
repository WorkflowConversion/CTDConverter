<manual><![CDATA[Bool parameter tests.]]></manual>
<PARAMETERS version="1.6.2" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/OpenMS/OpenMS/develop/share/OpenMS/SCHEMAS/Param_1_6_2.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <NODE name="BoolTest" description="Bool test.">
    <ITEM name="version" value="2.3.0" type="string" description="Version of the tool that generated this parameters file." required="false" advanced="true" />
    <NODE name="1" description="Instance &apos;1&apos; section for &apos;BoolTest&apos;">
      <!-- in ctd 1.7 there are now bool items -->
      <ITEM name="flag" value="false" type="bool" description="flag" required="false" />
      <ITEM name="flag_adv" value="false" type="bool" description="flag" required="false" />

      <!-- in ctd < 1.7 bools are strings with restriction true/false -->
      <!-- note bool parameters seem to be always required="false" -->
      <ITEM name="true"      value="true"  type="string" description="bool" required="false" advanced="false" restrictions="true,false"/>
      <ITEM name="false"     value="false" type="string" description="bool" required="false" advanced="false" restrictions="true,false"/>
      <ITEM name="true_adv"  value="true"  type="string" description="bool" required="false" advanced="true"  restrictions="true,false"/>
      <ITEM name="false_adv" value="false" type="string" description="bool" required="false" advanced="true"  restrictions="true,false"/>
      <ITEM name="flag_true"      value="true"  type="bool" description="bool" required="false" advanced="false"/>
      <ITEM name="flag_false"     value="false" type="bool" description="bool" required="false" advanced="false"/>
      <ITEM name="flag_true_adv"  value="true"  type="bool" description="bool" required="false" advanced="true"/>
      <ITEM name="flag_false_adv" value="false" type="bool" description="bool" required="false" advanced="true"/>

      <!-- same parameters as above in a node -->
      <NODE name="test_section" description="Test Section">
        <ITEM name="sect_true"      value="true"  type="string" description="bool" required="false" advanced="false" restrictions="true,false"/>
        <ITEM name="sect_false"     value="false" type="string" description="bool" required="false" advanced="false" restrictions="true,false"/>
        <ITEM name="sect_true_adv"  value="true"  type="string" description="bool" required="false" advanced="true"  restrictions="true,false"/>
        <ITEM name="sect_false_adv" value="false" type="string" description="bool" required="false" advanced="true"  restrictions="true,false"/>
        <ITEM name="sect_flag_true"      value="true"  type="bool" description="bool" required="false" advanced="false"/>
        <ITEM name="sect_flag_false"     value="false" type="bool" description="bool" required="false" advanced="false"/>
        <ITEM name="sect_flag_true_adv"  value="true"  type="bool" description="bool" required="false" advanced="true"/>
        <ITEM name="sect_flag_false_adv" value="false" type="bool" description="bool" required="false" advanced="true"/>
      </NODE>
    </NODE>
  </NODE>
</PARAMETERS>
</tool>
